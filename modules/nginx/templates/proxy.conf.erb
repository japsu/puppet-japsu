# puppet

server {
    listen 80;
    server_name <%= @title %>;

<% if @ssl -%>
    location / {
        rewrite ^(.*)$ https://<%= @title %>$1;
    }
}

server {
    listen 443;
    server_name <%= @title %>;
    ssl on;

<% if @ssl_certificate -%>
    ssl_certificate <%= @ssl_certificate %>;
    ssl_certificate_key <%= @ssl_certificate_key %>;

<% end -%>
<% if @ssl_strict_transport_security -%>
    add_header Strict-Transport-Security max-age=15768000;

<% end -%>
<% end -%>
<% if @static_path -%>
    location ~ ^/static/(.*)$ {
        alias <%= @static_path %>/$1;
    }

<% end -%>
    location / {
        proxy_pass <%= @target %>;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
<% if @enforce_sso -%>

        if ($http_cookie !~ 'crowd.token_key') {
            rewrite ^(.*)$ https://kompassi.tracon.fi/crowd?next=https://<%= @title %>$1 last;
        }
<% end -%>
    }
}
